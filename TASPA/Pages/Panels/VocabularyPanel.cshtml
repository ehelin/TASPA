@page
@model VocabularyPanelModel
@{
    ViewData["Title"] = "Vocabulary";
}
<script type="text/javascript">
    LoadVocabularyLists('@Model.SearchTerm', '@Model.SearchVocabularyList');
</script>
<div id="vocabularyPanel" class="center" onload="LoadVocabularyLists();">
    <h4 class="center">Vocabulary</h4>

    <!-- TODO - update select list based on radio button selected -->
    <!-- TODO - check in final should have phrases and one other at least -->
    <!-- TODO - set checked state on search term when it is known -->
    <div class="vocabularyListSelectionPanelParent">
        <div class="vocabularyListSelectionPanel">
            <div id="vocabularyMobileMenu" class="collasped">
                <table width="100%">
                    <tr>
                    @for(var ctr=0; ctr<Model.VocabularyRadioButtons.Count; ctr++)
                    {                            
                        <td>
                            @if(@Model.VocabularyRadioButtons[ctr].Value == @Model.SearchVocabularyList)
                            {
                                <input type="radio" name="type" checked
                                    id="@Model.VocabularyRadioButtons[ctr].Value"
                                    value="@Model.VocabularyRadioButtons[ctr].Value" 
                                    onclick="@Model.VocabularyRadioButtons[ctr].MethodCall">@Model.VocabularyRadioButtons[ctr].LinkText<br />
                            } 
                            else if(string.IsNullOrEmpty(@Model.SearchVocabularyList) && ctr == 0)
                            {
                                <input type="radio" name="type" checked
                                    id="@Model.VocabularyRadioButtons[ctr].Value"
                                    value="@Model.VocabularyRadioButtons[ctr].Value" 
                                    onclick="@Model.VocabularyRadioButtons[ctr].MethodCall">@Model.VocabularyRadioButtons[ctr].LinkText<br />
                            }                            
                            else 
                            {
                                <input type="radio" name="type"
                                    id="@Model.VocabularyRadioButtons[ctr].Value"
                                    value="@Model.VocabularyRadioButtons[ctr].Value" 
                                    onclick="@Model.VocabularyRadioButtons[ctr].MethodCall">@Model.VocabularyRadioButtons[ctr].LinkText<br />
                            }
                        </td>
                            
                        @if ((ctr+1) % 2 == 0) // (ctr+1) is because we start at index 0 for the lists, but need to start at 1 form the table to draw correctly
                        {
                            <tr></tr>                                
                        }
                    }
                    </tr>
                </table>
            </div>
            <div id="vocabularyDesktopMenu" class="expanded">
                <table width="100%">
                    <tr>
                        @for (var ctr = 0; ctr < Model.VocabularyRadioButtons.Count; ctr++)
                        {
                            <td>
                                @if(@Model.VocabularyRadioButtons[ctr].Value == @Model.SearchVocabularyList)
                                {
                                    <input type="radio" name="type" checked
                                           id="@Model.VocabularyRadioButtons[ctr].Value"
                                           value="@Model.VocabularyRadioButtons[ctr].Value"
                                           onclick="@Model.VocabularyRadioButtons[ctr].MethodCall">
                                    @Model.VocabularyRadioButtons[ctr].LinkText
                                    <br />
                                }
                                else if(string.IsNullOrEmpty(@Model.SearchVocabularyList) && ctr == 0)
                                {
                                    <input type="radio" name="type" checked
                                           id="@Model.VocabularyRadioButtons[ctr].Value"
                                           value="@Model.VocabularyRadioButtons[ctr].Value"
                                           onclick="@Model.VocabularyRadioButtons[ctr].MethodCall">
                                    @Model.VocabularyRadioButtons[ctr].LinkText
                                    <br />
                                }
                                else
                                {
                                    <input type="radio" name="type"
                                           id="@Model.VocabularyRadioButtons[ctr].Value"
                                           value="@Model.VocabularyRadioButtons[ctr].Value"
                                           onclick="@Model.VocabularyRadioButtons[ctr].MethodCall">
                                     @Model.VocabularyRadioButtons[ctr].LinkText
                                    <br />
                                }
                            </td>

                            @if ((ctr + 1) % 4 == 0) // (ctr+1) is because we start at index 0 for the lists, but need to start at 1 form the table to draw correctly
                            {
                                <tr></tr>
                            }
                        }
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div id="vocabularySubPanel" class="collasped">
        @await Html.PartialAsync("/Pages/Panels/SubPanels/VocabularySubPanel.cshtml")
    </div>
</div>
